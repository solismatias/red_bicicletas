extends ../layout

block content
    a(href="/bicicletas/create") Nueva Bicicleta 
    table.table 
        thead 
            tr 
                th(scope="col") #
                th(scope="col") Color
                th(scope="col") Modelo
                th(scope="col") Ubicacion
                th(scope="col") 
        tbody 
            each bici in bicis
                tr 
                    td(scope="row")
                        = bici.id 
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a(href= "bicicletas/update/"+bici.id class="btn") Editar
                    td
                        form.inline(method= "post" action="bicicletas/"+"delete/"+bici.id)
                            input(type="hidden" name="id" value= bici.id)
                            button.link-button(type="submit" name="submit_params" value="submit_value" class="btn")
                                ="Eliminar"